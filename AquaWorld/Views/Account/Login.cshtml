@model AquaWorld.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Giriş Yap</h2>
<hr />
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(i => i.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Parola Adı</label>
        @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(i => i.IsRememberMe, new { @class = "form-inline" }) <span>Beni Hatırla ?</span>
    </div>
 
    <button class="btn btn-primary" type="submit">Giriş Yap</button>
    @Html.ActionLink(" Kayıt Ol ","Register","Account",null,new {@class="btn btn-primary" })


}

